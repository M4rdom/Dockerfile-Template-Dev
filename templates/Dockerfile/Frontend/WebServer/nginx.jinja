{% if WebServer_Version_Tag %}
FROM nginx:{{WebServer_Version_Tag}} AS prod
{% elif WebServer_Version_Digest %}
FROM nginx@{{WebServer_Version_Digest}} AS prod
{% else %}
FROM nginx AS prod
{% endif %}

COPY --from=build /usr/src/app/dist/{{projectName}} /usr/share/nginx/html

COPY nginx.conf /etc/nginx/nginx.conf

{% if Port is defined%}
EXPOSE {{Port}}
{% else %}
EXPOSE 80
{% endif %}